<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |f| %>
          <tr>
            <th><%= f.email %></th>
            <td><%= f.first_name %></td>
            <td><%= f.last_name %></td>
            <td>
              <%= link_to 'Unfollow ', friendship_path(f), method: :delete, data: {confirm: "Are you sure?"},
                                            class: "btn btn-sm btn-warning" %>
              <%= link_to 'View Profile ', user_path(f), class: "btn btn-sm btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>